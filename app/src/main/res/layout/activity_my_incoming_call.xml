<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_incoming_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacksondanny.myapp2.MyIncomingCall">

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/myBack" />

    <ImageView
        app:srcCompat="@drawable/btn_acceptcall"
        android:id="@+id/btn_accept"
        android:layout_alignTop="@+id/btn_reject"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <ImageView
        android:layout_height="250dp"
        app:srcCompat="@drawable/usericon"
        android:id="@+id/img_profile"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp" />

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/phoneNumber"
        android:textAlignment="center"
        android:textSize="30sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:textColor="@color/ame_default_cluster_text_shadow_color" />

    <ImageView
        app:srcCompat="@drawable/btn_rejectcall"
        android:id="@+id/btn_reject"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="35dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
