<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacksondanny.myapp2.PhotoFragment"
    android:background="@android:color/black">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/rText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgPicture"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </FrameLayout>

        <TextView
            android:text="G = 255"
            android:layout_marginTop="23dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:textColor="@color/colorAccent"
            android:background="@drawable/greenrect"
            android:paddingLeft="30px"
            android:paddingTop="4px"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:typeface="sans"
            android:layout_height="83px"
            android:layout_width="250px" />

        <TextView
            android:text="B = 255"
            android:layout_below="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:layout_marginTop="24dp"
            android:id="@+id/rText"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:background="@drawable/bluerect"
            android:paddingLeft="30px"
            android:paddingTop="4px"
            android:fontFamily="sans-serif"
            android:typeface="sans"
            android:layout_width="250px"
            android:layout_height="83px" />

        <TextView
            android:text="R = 255"
            android:layout_marginStart="25dp"
            android:id="@+id/textView1"
            android:textColor="@color/colorAccent"
            android:background="@drawable/redrect"
            android:paddingLeft="30px"
            android:paddingTop="4px"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:typeface="sans"
            android:layout_width="250px"
            android:layout_height="83px" />

        <ImageView
            app:srcCompat="@drawable/pointer"
            android:id="@+id/imageView"
            android:layout_marginTop="59dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/rText"
            android:layout_alignEnd="@+id/linearLayout4" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:paddingBottom="30px"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="16dp"
                android:layout_above="@+id/bottombar"
                android:layout_alignParentEnd="true"
                android:layout_width="206px">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <FrameLayout
                            android:layout_width="206px"
                            android:layout_height="206px">

                            <ImageView
                                android:layout_width="206px"
                                android:layout_height="206px"
                                app:srcCompat="@color/colorBottomNavigationAccent"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                android:id="@+id/imageView7" />

                            <ImageView
                                android:layout_width="200px"
                                android:layout_height="200px"
                                app:srcCompat="@android:color/black"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                android:id="@+id/imageView6" />
                        </FrameLayout>

                        <TextView
                            android:text="Picked Color"
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:id="@+id/textView10"
                            android:layout_weight="0.7"
                            android:textStyle="normal|bold"
                            android:textColor="@color/colorAccent"
                            android:typeface="sans"
                            android:fontFamily="sans-serif"
                            android:textAlignment="center"
                            android:textSize="12sp" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
